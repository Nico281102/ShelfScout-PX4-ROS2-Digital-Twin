<?xml version="1.0"?>
<!--
  Over-Rack Indoor World (Gazebo Classic / SDF 1.6)

  - Room with two rack rows and barcode boards on the upper shelves
  - PX4 drone model included (iris_opt_flow) with downward-facing sensor stack
  - Visible scan markers (waypoint hints) matching the default config waypoints

  Notes:
  - The drone model `iris_opt_flow` comes from PX4's sitl_gazebo models.
  - Ensure your GAZEBO_MODEL_PATH includes both PX4 sitl_gazebo models
    and this repo's `models/` folder (scripts/launch_px4_gazebo.sh does this).
-->
<sdf version="1.6">
  <world name="overrack_indoor">

    <!-- Enable Gazebo ROS API plugin for ROS2 services -->
    <plugin name="gazebo_ros_api_plugin" filename="libgazebo_ros_api_plugin.so"/> <!-- ROS2 integration , to commit-->
    <!-- Publishes /gazebo/model_states and /gazebo/link_states to ROS2 -->
    <plugin name="gazebo_ros_state" filename="libgazebo_ros_state.so">
      <ros>
        <namespace>/gazebo</namespace>
      </ros>
    </plugin>
    <!-- Provides /gazebo/get_model_state and /gazebo/get_entity_state services -->
    <plugin name="gazebo_ros_factory" filename="libgazebo_ros_factory.so">
      <ros>
        <namespace>/gazebo</namespace>
      </ros>
    </plugin>

    <model name="origin_marker">
  <static>true</static>
  <pose>0 0 0 0 0 0</pose>
  <link name="link">
    <visual name="visual">
      <geometry>
        <box>
          <size>0.2 0.2 0.2</size>
        </box>
      </geometry>
      <material>
        <ambient>1 0 0 1</ambient> <!-- rosso brillante -->
        <diffuse>1 0 0 1</diffuse>
      </material>
    </visual>
  </link>
</model>



    <gravity>0 0 -9.81</gravity>
    <scene>
      <ambient>0.4 0.4 0.4 1</ambient>
      <background>0.7 0.7 0.8 1</background>
      <shadows>true</shadows>
    </scene>

