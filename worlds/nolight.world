<gui fullscreen="0">
  <camera name="overrack_default">
    <!-- Posizione iniziale della camera nel mondo -->
    <pose>0 0 1.5 0 0 0</pose>

    <!-- Camera in modalitÃ  FPS -->
    <view_controller>orbit</view_controller>

    <!-- Segui il drone -->
    <track_visual>iris_opt_flow::base_link</track_visual>
  </camera>
</gui>



    <physics type="ode">
      <max_step_size>0.004</max_step_size>
      <real_time_update_rate>250</real_time_update_rate>
      <real_time_factor>1.0</real_time_factor>
    </physics>

    <!-- Sun and ground -->
    <include>
      <uri>model://sun</uri>
    </include>
    <include>
      <uri>model://ground_plane</uri>
    </include>

    <!-- Simple room walls -->
    <model name="room">
      <static>true</static>
      <pose>0 0 0 0 0 0</pose>
      <!-- Roof -->
      <link name="roof">
        <pose>0 0 3.0 0 0 0</pose>
        <collision name="col">
          <geometry>
            <box>
              <size>12 10 0.1</size>
            </box>
          </geometry>
        </collision>
        <visual name="vis">
          <geometry>
            <box>
              <size>12 10 0.1</size>
            </box>
          </geometry>
          <material>
            <ambient>0.9 0.9 0.9 1</ambient>
            <diffuse>0.9 0.9 0.9 1</diffuse>
          </material>
        </visual>
      </link>

      <!-- Four walls: 12m x 10m room, 3m tall -->
      <link name="wall_north">
        <pose>0 5 1.5 0 0 0</pose>
        <collision name="col">
          <geometry>
            <box><size>12 0.1 3</size></box>
          </geometry>
        </collision>
        <visual name="vis">
          <geometry>
            <box><size>12 0.1 3</size></box>
          </geometry>
          <material>
            <ambient>0.85 0.85 0.85 1</ambient>
            <diffuse>0.85 0.85 0.85 1</diffuse>
            <transparency>0.6</transparency>
          </material>
        </visual>
      </link>
      <link name="wall_south">
        <pose>0 -5 1.5 0 0 0</pose>
        <collision name="col">
          <geometry>
            <box><size>12 0.1 3</size></box>
          </geometry>
        </collision>
        <visual name="vis">
          <geometry>
            <box><size>12 0.1 3</size></box>
          </geometry>
          <material>
            <ambient>0.85 0.85 0.85 1</ambient>
            <diffuse>0.85 0.85 0.85 1</diffuse>
            <transparency>0.6</transparency>
          </material>
        </visual>
      </link>
      <link name="wall_east">
        <pose>6 0 1.5 0 0 0</pose>
        <collision name="col">
          <geometry>
            <box><size>0.1 10 3</size></box>
          </geometry>
        </collision>
        <visual name="vis">
          <geometry>
            <box><size>0.1 10 3</size></box>
          </geometry>
          <material>
            <ambient>0.85 0.85 0.85 1</ambient>
            <diffuse>0.85 0.85 0.85 1</diffuse>
            <transparency>0.6</transparency>
          </material>
        </visual>
      </link>
      <link name="wall_west">
        <pose>-6 0 1.5 0 0 0</pose>
        <collision name="col">
          <geometry>
            <box><size>0.1 10 3</size></box>
          </geometry>
        </collision>
        <visual name="vis">
          <geometry>
            <box><size>0.1 10 3</size></box>
          </geometry>
          <material>
            <ambient>0.85 0.85 0.85 1</ambient>
            <diffuse>0.85 0.85 0.85 1</diffuse>
            <transparency>0.6</transparency>
          </material>
        </visual>
      </link>
    </model>

    <!-- Two rack rows -->
    <include>
      <uri>model://overrack_shelf</uri>
      <name>rack_row_a</name>
      <pose>0 -2.5 0 0 0 0</pose>
    </include>
    <include>
      <uri>model://overrack_shelf</uri>
      <name>rack_row_b</name>
      <pose>0 2.5 0 0 0 0</pose>
    </include>

